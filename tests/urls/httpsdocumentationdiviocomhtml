    jQuery(function ($) {
        var adjustAnchor = function() {
            var $anchor = $(':target');
            var fixedElementHeight = 80;

            if ($anchor.length > 0) {
                setTimeout(function () {
                    $('html, body').scrollTop($anchor.offset().top - fixedElementHeight);
                });
            }
        };

        adjustAnchor();
        $(window).on('hashchange load', adjustAnchor);
    });
